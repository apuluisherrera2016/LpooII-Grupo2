<Window x:Class="Vistas.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="290" FontSize="14" Background="#2e3137" 
        WindowStyle="None" Loaded="Window_Loaded"> 
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
    <StackPanel Margin="20">
        <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
            <Label Content="Usuario" Foreground="white" />
            <TextBox Name="txtUsuario" Background="#545d6a" Foreground="white" FontSize="18"/>
            <Label Content="Contraseña" Foreground="white" />
            <TextBox Name="txtContraseña" Background="#545d6a" Foreground="white" FontSize="18"/>

            <Button Name="btnEntrar" Content="Acceder" Margin="60 10" Background="#545d6a" Foreground="white" FontSize="18" Click="btnEntrar_Click" />
            <Button Name="btnSalir" Content="Salir" Margin="60 10" Background="#545d6a" Foreground="white" FontSize="18"/>
        </StackPanel>
        </Border>
</Window>
