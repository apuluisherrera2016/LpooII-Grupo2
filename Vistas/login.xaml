<Window x:Class="Vistas.login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="319" Width="290" FontSize="14" 
        Loaded="Window_Loaded" >
    <Window.Background>
        <ImageBrush ImageSource="/Images/uni2.jpg" />
    </Window.Background>
    <Border Background="#2e3137"  Opacity="1" CornerRadius="20" Margin="20">
    <StackPanel Margin="20">
        <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
        <Separator></Separator>
            <Label Content="Usuario" Foreground="#3D78D4" />
            <TextBox Name="txtUsuario" Background="#545d6a" Foreground="#3D78D4" FontSize="18"/>
            <Label Content="Contraseña" Foreground="white" />
            <TextBox Name="txtContraseña" Background="#545d6a"   Foreground="white" FontSize="18"/>

            <Button Name="btnEntrar" BorderBrush="#3C74B5" Content="Acceder" Margin="60 10" Background="#545d6a" Foreground="white" FontSize="18" Click="btnEntrar_Click" />
            <Button Name="btnSalir" Content="Salir" Margin="60 10" Background="#545d6a" Foreground="white" FontSize="18"/>
        </StackPanel>
        </Border>
</Window>
